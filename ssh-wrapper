# wrap ssh to aid in tmux splits
function ssh() {

  # if tmux is running
  if [ -n "$TMUX" ]
  then
    window_index=$(tmux display-message -p '#I')
    session_variable_name="window_${window_index}_ssh_command"
    #echo $session_variable_name
    
    tmux setenv $session_variable_name "$*"
    #eval ${session_variable_name}=$(echo -ne \""$*"\")

    # run ssh
    /usr/bin/ssh $*

    # clean up
    #rm $TMUX.ssh
  else
    # just run
    /usr/bin/ssh $*
  fi
}
